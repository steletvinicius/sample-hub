<div class="container-xxl my-4" style="padding: 0 100px;">
  <h2 class="text-center text-uppercase">Cadastro de paciente</h2>
  <hr>
  <div class="row justify-content-center" >
    <div class="col">
      <div id="patients" class="d-flex flex-column border border-secondary rounded p-2 background-editable h-100">
        <% if @patients.present? %>
          <form id="search-patient" class="text-center" action="/samples" method="post">

            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="form-group">
              <h4 class="text-center mb-3 ">Busque um paciente cadastrado</h4>
              <select class="select2 form-control" placeholder="Nome..." name="patient_id">
                <option disabled selected value> --- Pesquise / Selecione  --- </option>
                <% @patients.each do |patient| %>
                  <option value="<%= patient.id %>">
                     <%= "#{patient.first_name} #{patient.last_name} - CPF #{patient.cpf}" %>
                  </option>
                <% end %>
              </select>
            </div>
            <div class="form-group text-right">
              <input type="submit" class="btn btn-primary mt-2 mr-5" value="Selecionar paciente">
            </div>
          </form>
        <% else %>
          <p>NÃ£o existem pacientes cadastrados no Sample Hub</p>
        <% end %>
      </div>
    </div>
    <div class="col-8">
      <div id="new-patient" class="d-flex flex-column border border-secondary rounded p-2 background-editable">
        <h4 class="text-center">Cadastre novo paciente</h4>
        <%= render "/patients/new"  %>
      </div>
    </div>
  </div>
</div>
