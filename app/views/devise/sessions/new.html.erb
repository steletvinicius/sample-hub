<div class="container my-4", style="display: grid; width: 400px;">
  <h3>Log in</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: 'Senha',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <%= f.button :submit, "Login", class: "btn-primary mb-3", style: "color: white; width: 120px;" %>
        </div>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>