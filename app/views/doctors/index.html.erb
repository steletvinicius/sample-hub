<div class="container-xxl my-5" style="padding: 0 100px;">
  <h2 class="text-center text-uppercase">Cadastro de médicos</h2>
  <hr>
  <div class="row justify-content-center" >
    <div class="col-6">
      <div id="doctors" class="d-flex flex-column border border-light rounded p-2 background-editable h-100 shadow">
        <% if @doctors.present? %>
          <%= form_with url: doctors_path, method: 'get', remote: true do %>
            <h4 class="text-center my-3">Busque um médico cadastrado</h4>
            <select name="selectDoctor" id="selectDoctor" class="select2 form-control ml-auto mr-2" placeholder="Nome...">
              <option disabled selected value> --- Pesquise / Selecione  --- </option>
              <% @doctors.each do |doctor| %>
                <option value="<%= doctor.id %>">
                  <%= "#{doctor.first_name} #{doctor.last_name} - CRM #{doctor.crm}" %>
                </option>
              <% end %>
            </select>
            <input type="submit" class="btn btn-primary mt-2 mr-5" value="Selecionar paciente">
          <% end %>
        <% else %>
          <p>Não existem médicos cadastrados no Sample Hub</p>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <div id="new-doctor" class="d-flex flex-column border border-light rounded p-2 background-editable shadow">
        <h4 class="text-center mt-3">Cadastre novo médico</h4>
        <%= render "/shared/form_doctor", doctor: Doctor.new  %>
      </div>
    </div>
  </div>
</div>