<div class="container my-4", style="width: 480px;">
  <h3>Alterar meus dados</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div>
      <div class="form-inputs">
        <div class="d-flex justify-content-between">
          <%= f.input :first_name,
                      label: 'Nome',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" } %>
          <%= f.input :last_name,
                      label: 'Sobrenome',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" } %>
        </div>

        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    label: 'Nova senha',
                    hint: "deixe em branco se não quiser alterar",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: 'Confirmação de nova senha',
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: 'Senha anterior',
                    hint: "precisamos de sua senha atual para confirmar as alterações",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <span><%= "Instituição: #{current_user.institution} | 
                  CPF: #{current_user.cpf.nil? ? current_user.cpf : 'não cadastrado'}" %></span><br>
      <span><%= "Tipo de acesso: #{current_user.role}" %></span>

      <div class="form-actions">
        <%= f.button :submit, "Alterar", class: "btn btn-primary my-2", style: "color: white;" %>
      </div>
    </div>
  <% end %>
  <p><%= link_to "Cancelar meu acesso", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

  <%= link_to "Voltar", :back %>
</div>